<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_transparent_10">

    <RelativeLayout
        android:id="@+id/ll_bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_sync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_sync_white_24dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/default_margin"/>

        <ImageView
            android:id="@+id/iv_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_settings_white_24dp"
            android:layout_toLeftOf="@id/iv_sync"
            android:layout_toStartOf="@id/iv_sync"
            android:layout_centerVertical="true"
            android:padding="@dimen/default_margin"/>

        <TextView
            android:id="@+id/tv_rss_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_toLeftOf="@id/iv_settings"
            android:layout_toStartOf="@id/iv_settings"
            android:layout_margin="@dimen/small_margin"
            style="@style/Base.TextAppearance.AppCompat.Medium"/>

    </RelativeLayout>

    <ListView
        android:id="@+id/lv_rss_feed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_bottom_menu"/>

</RelativeLayout>